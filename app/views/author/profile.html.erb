<% content_for :title, "#{t :txt_update_profile} @ #{@profile.name} # #{t :txt_defualt_title}" %>
<% content_for :meta_keywords, "#{t :txt_default_meta_keywords}" %>
<% content_for :meta_descriptions, "#{t :txt_defaullt_meta_description}" %>


<div class="author_show">
  <div class="post-inner-content secondary-content-box">

    <h3><%= t :txt_author_information %></h3>

    <!-- author bio -->
    <div class="author-bio">


      <!-- avatar -->
      <div class="avatar">
        <img src="http://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(@profile.email) %>.jpg" alt="<%= @profile.name %>">
      </div>
      <!-- end avatar -->


      <!-- user bio -->
      <div class="author-bio-content">

        <h4>
          <% if @profile.website.empty? %>
              <%= @profile.name %>
          <% else %>
              <%= link_to "#{@profile.name}", "#{@profile.website}", :target => "_blank" %>
          <% end %>
        </h4>

        <p>
          <%= replace(@profile.about) %>
        </p>

        <% if ! @profile.twitter.empty? && ! @profile.facebook.empty? %>
            <div class="social-icons">
        <% end %>
        <% if ! @profile.facebook.empty? %>
            <%= link_to "", "http://facebook.com/#{@profile.facebook}", :target => "_blank", :class => "facebook" %>
            <% if ! @profile.twitter.empty? %>
                <%= link_to "", "http://twitter.com/#{@profile.twitter}", :target => "_blank", :class => "tumblr" %>
            <% end %>
            </div>
        <% end %>

      </div>
      <!-- end author bio -->


    </div>
    <!-- end author bio -->

  </div>
  <!-- end author -->
</div>


<!-- single post [post with image] -->
<div class="single-post">

  <!-- post content -->
  <div class="post-content">


    <div class="span12">


      <!-- post inner content -->
      <div class="post-inner-content">

        <% if flash[:status] == FALSE %>
            <% if flash[:notice].kind_of?(Array) == true %>

                <% flash[:notice].each do |error| %>
                    <div class="alert alert-dismissable alert-danger">
                      <p><%= error %></p>
                    </div>
                <% end %>

            <% else %>
                <div class="alert alert-dismissable alert-danger">
                  <p><%= flash[:notice] %></p>
                </div>
            <% end %>

        <% elsif flash[:status] == TRUE %>
            <div class="alert alert-dismissable alert-success                                                                                                           ">
              <p><%= flash[:notice] %></p>
            </div>

            <% end %>


        <h2><%= t :txt_profile %></h2>

        <%= form_for(:profile, :url => "", :method => "post", :class => "bs-example") do |f| %>

            <div class="form-group">
              <%= f.label("#{t :txt_profile_name}",:class => "control-label", :for => "profile_name") %>
              <%= f.text_field(:name,:class => "form-control") %>
            </div>

            <div class="form-group">
              <%= f.label("#{t :txt_profile_email}",:class => "control-label", :for => "profile_email") %>
              <%= f.text_field(:email,:class => "form-control") %>
            </div>

            <div class="form-group">
              <%= f.label("#{t :txt_profile_about}",:class => "control-label", :for => "profile_about") %>
              <%= f.text_area(:about,:class => "form-control", :style => "height:100px; width:700px;") %>
            </div>

            <div class="form-group">
              <%= f.label("#{t :txt_profile_website}",:class => "control-label", :for => "profile_website") %>
              <%= f.text_field(:website,:class => "form-control") %>
            </div>

            <div class="form-group">
              <%= f.label("#{t :txt_profile_twitter}",:class => "control-label", :for => "profile_twitter") %>
              <%= f.text_field(:twitter,:class => "form-control") %>
            </div>

            <div class="form-group">
              <%= f.label("#{t :txt_profile_facebook}",:class => "control-label", :for => "profile_facebook") %>
              <%= f.text_field(:facebook,:class => "form-control") %>
            </div>

            <div class="form-group">
              <%= submit_tag "#{t :txt_update_profile}", :class => "btn btn-success", :style => "width:100%; height:50px; font-weight:bold;" %>
            </div>

        <% end %>
      </div>
      <!-- end inner content -->


    </div>
    <!-- end span12 -->


  </div>
  <!-- end post content -->


</div>
<!-- end single post -->

