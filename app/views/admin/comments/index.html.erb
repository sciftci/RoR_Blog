<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="tables"><%= t :txt_all_categories %></h1>
      </div>

      <div class="bs-example">
        <h3>Onay Bekleyenler</h3>
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>#</th>
            <th><%= t :txt_user_information %></th>
            <th><%= t :txt_process %></th>
          </tr>
          </thead>
          <tbody>
          <% @comments_not_approved.each do |comment| %>
              <tr>
                <td><%= comment.id %></td>
                <td><%= raw "#{comment.comment} <br/> #{comment.name} - #{comment.email}" %></td>
                <td>
                  <span class="label label-success"><%= link_to "#{t :txt_approved}", "/admin/comments/pro?id=#{comment.id}&pro=approved" %></span>
                  <span class="label label-danger"><%= link_to "#{t :txt_delete}", "/admin/comments/pro?id=#{comment.id}&pro=delete" %></span>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>

      <div class="bs-example">
        <h3>Onaylananlar</h3>
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>#</th>
            <th><%= t :txt_user_information %></th>
            <th><%= t :txt_process %></th>
          </tr>
          </thead>
          <tbody>
          <% @comments_approved.each do |comment| %>
              <tr>
                <td><%= comment.id %></td>
                <td><%= raw "#{comment.comment} <br/> #{comment.name} - #{comment.email}" %></td>
                <td>
                  <span class="label label-warning"><%= link_to "#{t :txt_unapproved}", "/admin/comments/pro?id=#{comment.id}&pro=unapproved" %></span>
                  <span class="label label-danger"><%= link_to "#{t :txt_delete}", "/admin/comments/pro?id=#{comment.id}&pro=delete" %></span>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <!-- /example -->
    </div>
  </div>
</div>
