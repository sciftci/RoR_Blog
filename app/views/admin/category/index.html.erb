<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="tables"><%= t :txt_all_categories %></h1>
      </div>

      <div class="bs-example">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>#</th>
            <th><%= t :txt_title %></th>
            <th><%= t :txt_process %></th>
          </tr>
          </thead>
          <tbody>
          <% @categories.each do |category| %>
              <tr>
                <td><%= category.id %></td>
                <td><%= category.title %></td>
                <td>
                  <span class="label label-warning"><%= link_to "#{t :txt_edit}", "/admin/category/edit/#{category.id}" %></span>
                  <span class="label label-danger"><%= link_to "#{t :txt_delete}", "/admin/category/delete/#{category.id}" %></span>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div><!-- /example -->
    </div>
  </div>
</div>
