<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="tables"><%= t :txt_all_posts %></h1>
      </div>

      <div class="bs-example">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>#</th>
            <th><%= t :txt_title %></th>
            <th><%= t :txt_description %></th>
            <th><%= t :txt_process %></th>
          </tr>
          </thead>
          <tbody>
          <% @posts.each do |post| %>
              <tr>
                <td><%= post.id %></td>
                <td><%= post.title %></td>
                <td><%= strip_tags(post.summary) %></td>
                <td>
                  <span class="label label-warning"><%= link_to "#{t :txt_edit}", "/admin/post/edit/#{post.id}" %></span>
                  <span class="label label-danger"><%= link_to "#{t :txt_delete}", "/admin/post/delete/#{post.id}" %></span>
                </td>
              </tr>
          <% end %>

          </tbody>
        </table>
      </div><!-- /example -->
    </div>
  </div>
</div>
