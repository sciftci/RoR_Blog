<div class="flash">
  <% if flash[:status] == TRUE %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
  <% elsif flash[:status] == FALSE %>
      <% flash[:notice].each do |errors| %>
          <div class="alert alert-error">
            <%= errors %>
          </div>
      <% end %>
  <% end %>
</div>



